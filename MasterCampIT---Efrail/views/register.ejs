<!-- Fichier pour la page register-->
<!DOCTYPE html>
<html lang="fr">
<head>

  <!-- Définition de l'encodage de caractères en UTF-8-->
  <meta charset="UTF-8">

  <!-- Configuration de la vue initiale pour les appareils mobiles -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Lien vers la feuille de style CSS -->
  <link rel="stylesheet" href="/css/register.css">

  <!-- Titre de la page -->
  <title>Register - Creamzouz</title>

</head>
<body>
  
  <!-- Section principale pour le formulaire d'enregistrement -->
    <section>
        <div class="form-box">
            <div class="form-value">

              <!-- Affichage du message d'erreur -->
                <% if (locals.errorMessage) { %>
                  <div class="alert alert-danger" role="alert">
                    <%= errorMessage %>
                  </div>
                <% } %>

                <!-- Formulaire d'enregistrement -->
                <form action="/register" method="post">
                    <h2>Register</h2>

                    <!-- Champ pour le nom d'utilisateur -->
                    <div class="inputbox">
                      <ion-icon name="person-outline"></ion-icon>
                      <input type="text" id="nameInput" name="username" required>
                      <label for="nameInput">Name</label>
                    </div>

                    <!-- Champ pour l'email -->
                    <div class="inputbox">
                      <ion-icon name="mail-outline"></ion-icon>
                      <input type="email" id="emailInput" name="email" required>
                      <label for="emailInput">Email</label>
                    </div>

                    <!-- Champ pour l'adresse -->
                    <div class="inputbox">
                      <ion-icon name="location-outline"></ion-icon>
                      <input type="text" id="addressInput" name="address" required>
                      <label for="addressInput">Address</label>
                    </div>

                    <!-- Champ pour le mot de passe -->
                    <div class="inputbox">
                      <ion-icon name="lock-closed-outline"></ion-icon>
                      <input type="password" id="passwordInput" name="password" required>
                      <label for="passwordInput">Password</label>
                    </div>

                    <!-- Bouton pour soumettre le formulaire -->
                    <button type="submit">Register</button>

                </form>
            </div>
        </div>
    </section>

    <!-- Scripts pour les icônes Ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</body>
</html>
